month = apr,
number = {4},
pmid = {10747041},
title = {{The genetical theory of natural selection.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=1461012\&tool=pmcentrez\&rendertype=abstract},
