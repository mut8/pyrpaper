file = {:home/lkohl/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Rubino et al. - 2007 - An isotopic method for testing the influence of leaf litter quality on carbon fluxes during decomposition.pdf:pdf},
journal = {Oecologia},
