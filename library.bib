journal = {Ecology},
keywords = {Animals,Birds,Birds: physiology,Capsicum,Capsicum: chemistry,Capsicum: physiology,Ecosystem,Environmental Monitoring,Environmental Monitoring: methods,Feeding Behavior,Feeding Behavior: physiology,Isotope Labeling,Movement,Nitrogen Isotopes,Nitrogen Isotopes: analysis,Population Dynamics,Seeds,Seeds: chemistry,Seeds: growth \& development,Seeds: physiology,Solanum,Solanum: chemistry,Solanum: physiology},
month = dec,
number = {12},
pages = {3516--25},
title = {{A new method to track seed dispersal and recruitment using 15N isotope enrichment.}},
