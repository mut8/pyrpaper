mendeley-tags = {HPA axis,aging,avian,developmental toxicology,redox metabolism,stress,stress hormone,telomere},
month = nov,
publisher = {The Royal Society},
title = {{Embryonic exposure to corticosterone modifies the juvenile stress response, oxidative stress and telomere length}},
url = {http://rspb.royalsocietypublishing.org/cgi/doi/10.1098/rspb.2011.1913},
